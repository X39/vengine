# Handle line endings automatically for files detected as text
# and leave all files detected as binary untouched.
* text=auto


#####################
# Special filenames #
#####################
.gitattributes eol=lf
.gitignore     eol=lf
CMakeLists.txt eol=lf


##############
# Text files #
##############

*.css           eol=lf
*.df            eol=lf
*.htm           eol=lf
*.html          eol=lf
*.java          eol=lf
*.js            eol=lf
*.json          eol=lf
*.jsp           eol=lf
*.jspf          eol=lf
*.jspx          eol=lf
*.properties    eol=lf
*.sh            eol=lf
*.tld           eol=lf
*.txt           eol=lf
*.tag           eol=lf
*.tagx          eol=lf
*.xml           eol=lf
*.yml           eol=lf
*.c             eol=lf
*.cc            eol=lf
*.cpp           eol=lf
*.h             eol=lf
*.hh            eol=lf
*.hpp           eol=lf
*.frag          eol=lf
*.vert          eol=lf
*.md            eol=lf
*.bat           eol=lf
*.svg           eol=lf

################
# Binary files #
################

*.class         binary
*.dll           binary
*.ear           binary
*.gif           binary
*.ico           binary
*.jar           binary
*.jpg           binary
*.jpeg          binary
*.bmp           binary
*.png           binary
*.so            binary
*.war           binary
*.exe           binary
*.spv           binary
